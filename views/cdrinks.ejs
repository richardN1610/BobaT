<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
    <title>Boba Tea</title>
</head>

<body>
    <div class="main-container">
        <%- include("_navbar.ejs") %>
            <!--rendering navbar -->
            <div class="drink-list">
                <div class="drink-list-title">Our Menu</div>
                <div class="drink-menu-selection">
                    <ul><a href="#top10"><li>Top10</li></a>
                        <a href="#cdrinks"><li>Cold Drinks</li></a>
                        <a href="#hdrinks"><li>Hot Drinks</li></a>
                    </ul>
                </div>
            </div>
            <section id="top10">
                <div class="drink-section">
                    <div class="drink-title">
                        <span>Top 10 Drinks Of The Month</span>
                    </div>
                    <div class="drinks" id="drinks">
                        <% items.top10.forEach(function(item) {%>
                            <div class="container" data-item-id="<%= item.id %>">
                                <div class="drink-type" id="drink-type">
                                    <img src="/images/<%= item.img %>">
                                    <span class="kj"><%= item.kj %></span>
                                    <i class="fas fa-info-circle"></i>
                                </div>
                                <div class="drink-details">
                                    <span class="drink-name"><%= item.name %></span>
                                    <span class="drink-price">$ <%= item.price /100 %></span>
                                    <!--divide by 100 to get the price in dollars-->
                                </div>
                                <div class="buy-div">
                                    <button class="buy-btn">Add To Cart</button>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </section>

            <section id="cdrinks">
                <div class="drink-section">
                    <div class="drink-title">
                        <span>Cold Drinks</span>
                    </div>
                    <div class="drinks" id="drinks">
                        <% items.cold.forEach(function(item) {%>
                            <div class="container" data-item-id="<%= item.id %>">
                                <div class="drink-type" id="drink-type">
                                    <img src="/images/<%= item.img %>">
                                    <span class="kj">
                                        <%= item.kj %>
                                    </span>
                                </div>
                                <div class="drink-details">
                                    <span class="drink-name">
                                        <%= item.name %>
                                    </span>
                                    <span class="drink-price">$ <%= item.price /100 %></span>
                                    <!--divide by 100 to get the price in dollars-->
                                </div>
                                <div class="buy-div">
                                    <button class="buy-btn">Add To Cart</button>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </section>

            <section id="hdrinks">
                <div class="drink-section">
                    <div class="drink-title">
                        <span>Hot Drinks</span>
                    </div>
                    <div class="drinks" id="drinks">
                        <% items.hot.forEach(function(item) {%>
                            <div class="container" data-item-id="<%= item.id %>">
                                <div class="drink-type" id="drink-type">
                                    <img src="/images/<%= item.img %>">
                                    <span class="kj"><%= item.kj %></span>
                                </div>
                                <div class="drink-details">
                                    <span class="drink-name"><%= item.name %></span>
                                    <span class="drink-price">$ <%= item.price /100 %></span>
                                    <!--divide by 100 to get the price in dollars-->
                                </div>
                                <div class="buy-div">
                                    <button class="buy-btn">Add To Cart</button>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </section>
    </div>
</body>

</html>